<%= form_with model: @caffeine_intake, class: "space-y-6" do |form| %>
  <% if @caffeine_intake.errors.any? %>
    <div class="bg-red-100 border border-red-400 text-red-700 px-4 py-3 rounded">
      <ul class="list-disc list-inside">
        <% @caffeine_intake.errors.full_messages.each do |message| %>
          <li><%= message %></li>
        <% end %>
      </ul>
    </div>
  <% end %>

  <div>
    <%= form.label :beverage_id, "飲み物", class: "block text-sm font-medium text-gray-700 mb-1" %>
    <%= form.collection_select :beverage_id, @beverages, :id, :name_with_caffeine, { prompt: "選択してください" }, class: "w-full px-3 py-2 border border-gray-300 rounded-lg shadow-sm focus:outline-none focus:ring-2 focus:ring-emerald-500 focus:border-emerald-500" %>
    <% if @beverages.empty? %>
      <p class="mt-1 text-sm text-gray-500">
        飲み物が登録されていません。
        <%= link_to "先に登録してください", new_beverage_path, class: "text-emerald-600 hover:text-emerald-800" %>
      </p>
    <% end %>
  </div>

  <div>
    <%= form.label :consumed_at, "摂取日時", class: "block text-sm font-medium text-gray-700 mb-1" %>
    <%= form.datetime_local_field :consumed_at, step: 60, class: "w-full px-3 py-2 border border-gray-300 rounded-lg shadow-sm focus:outline-none focus:ring-2 focus:ring-emerald-500 focus:border-emerald-500" %>
  </div>

  <div>
    <%= form.label :quantity, "数量", class: "block text-sm font-medium text-gray-700 mb-1" %>
    <%= form.number_field :quantity, class: "w-full px-3 py-2 border border-gray-300 rounded-lg shadow-sm focus:outline-none focus:ring-2 focus:ring-emerald-500 focus:border-emerald-500", min: 1, value: @caffeine_intake.quantity || 1 %>
  </div>

  <div class="flex items-center gap-4">
    <%= form.submit class: "bg-emerald-600 hover:bg-emerald-700 text-white font-medium py-2 px-6 rounded-lg transition cursor-pointer" %>
    <%= link_to "キャンセル", root_path, class: "text-gray-600 hover:text-gray-900" %>
  </div>
<% end %>
