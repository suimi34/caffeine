<div class="max-w-4xl mx-auto px-4 py-8">
  <div class="flex justify-between items-center mb-6">
    <h1 class="text-2xl font-bold text-gray-900">摂取記録</h1>
    <%= link_to "記録を追加", new_caffeine_intake_path, class: "bg-emerald-600 hover:bg-emerald-700 text-white font-medium py-2 px-4 rounded-lg transition" %>
  </div>

  <% if notice %>
    <div class="bg-green-100 border border-green-400 text-green-700 px-4 py-3 rounded mb-4">
      <%= notice %>
    </div>
  <% end %>

  <!-- 日付ナビゲーション -->
  <div class="flex items-center justify-center gap-2 sm:gap-4 mb-6">
    <%= link_to "←", caffeine_intakes_path(date: @date - 1.day), class: "text-gray-600 hover:text-gray-900 text-xl px-2" %>
    <span class="text-base sm:text-lg font-medium text-gray-700">
      <%= l @date, format: :long %>
    </span>
    <%= link_to "→", caffeine_intakes_path(date: @date + 1.day), class: "text-gray-600 hover:text-gray-900 text-xl px-2" %>
    <% unless @date == Date.current %>
      <%= link_to "今日", caffeine_intakes_path, class: "ml-2 text-sm bg-emerald-100 hover:bg-emerald-200 text-emerald-700 px-3 py-1 rounded-full transition" %>
    <% end %>
  </div>

  <!-- 日毎の合計 -->
  <div class="bg-emerald-50 border border-emerald-200 rounded-lg p-4 mb-6 text-center">
    <p class="text-sm text-emerald-600">この日の合計カフェイン</p>
    <p class="text-3xl font-bold text-emerald-700"><%= @daily_total %> mg</p>
  </div>

  <div class="bg-white shadow-md rounded-lg overflow-hidden">
    <table class="min-w-full divide-y divide-gray-200">
      <thead class="bg-gray-50">
        <tr>
          <th class="px-6 py-3 text-left text-xs font-medium text-gray-500 uppercase tracking-wider">時刻</th>
          <th class="px-6 py-3 text-left text-xs font-medium text-gray-500 uppercase tracking-wider">飲み物</th>
          <th class="px-6 py-3 text-left text-xs font-medium text-gray-500 uppercase tracking-wider">数量</th>
          <th class="px-6 py-3 text-left text-xs font-medium text-gray-500 uppercase tracking-wider">カフェイン</th>
          <th class="px-6 py-3 text-right text-xs font-medium text-gray-500 uppercase tracking-wider">操作</th>
        </tr>
      </thead>
      <tbody class="bg-white divide-y divide-gray-200">
        <% @caffeine_intakes.each do |intake| %>
          <tr class="hover:bg-gray-50">
            <td class="px-6 py-4 whitespace-nowrap text-sm text-gray-600">
              <%= intake.consumed_at.strftime("%H:%M") %>
            </td>
            <td class="px-6 py-4 whitespace-nowrap text-sm font-medium text-gray-900">
              <%= intake.beverage.name %>
            </td>
            <td class="px-6 py-4 whitespace-nowrap text-sm text-gray-600">
              × <%= intake.quantity %>
            </td>
            <td class="px-6 py-4 whitespace-nowrap text-sm text-gray-600">
              <%= intake.total_caffeine_mg %> mg
            </td>
            <td class="px-6 py-4 whitespace-nowrap text-right text-sm font-medium space-x-2">
              <%= link_to "編集", edit_caffeine_intake_path(intake), class: "text-indigo-600 hover:text-indigo-900" %>
              <%= button_to "削除", caffeine_intake_path(intake), method: :delete, class: "text-red-600 hover:text-red-900", data: { turbo_confirm: "本当に削除しますか？" } %>
            </td>
          </tr>
        <% end %>
        <% if @caffeine_intakes.empty? %>
          <tr>
            <td colspan="5" class="px-6 py-4 text-center text-sm text-gray-500">
              この日の記録はありません。
            </td>
          </tr>
        <% end %>
      </tbody>
    </table>
  </div>

  <div class="mt-6">
    <%= link_to "← ダッシュボードに戻る", root_path, class: "text-gray-600 hover:text-gray-900" %>
  </div>
</div>
