<div class="max-w-4xl mx-auto px-4 py-8">
  <div class="flex justify-between items-center mb-6">
    <h1 class="text-2xl font-bold text-gray-900">飲み物マスター</h1>
    <%= link_to "新規登録", new_beverage_path, class: "bg-emerald-600 hover:bg-emerald-700 text-white font-medium py-2 px-4 rounded-lg transition text-sm" %>
  </div>

  <% if notice %>
    <div class="bg-green-100 border border-green-400 text-green-700 px-4 py-3 rounded mb-4">
      <%= notice %>
    </div>
  <% end %>

  <% if alert %>
    <div class="bg-red-100 border border-red-400 text-red-700 px-4 py-3 rounded mb-4">
      <%= alert %>
    </div>
  <% end %>

  <% if @beverages.empty? %>
    <div class="bg-white shadow-md rounded-lg p-8 text-center">
      <p class="text-gray-500">飲み物が登録されていません。</p>
      <%= link_to "最初の飲み物を登録する", new_beverage_path, class: "inline-block mt-4 text-emerald-600 hover:text-emerald-800" %>
    </div>
  <% else %>
    <!-- モバイル: カード形式 -->
    <div class="md:hidden space-y-3">
      <% @beverages.each do |beverage| %>
        <div class="bg-white shadow-md rounded-lg p-4">
          <div class="flex justify-between items-start">
            <div>
              <p class="font-medium text-gray-900"><%= beverage.name %></p>
              <p class="text-sm text-emerald-600 mt-1"><%= beverage.caffeine_mg %> mg</p>
            </div>
            <div class="flex items-center gap-3">
              <%= link_to edit_beverage_path(beverage), class: "text-indigo-600 hover:text-indigo-900 p-1" do %>
                <svg class="w-5 h-5" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                  <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M11 5H6a2 2 0 00-2 2v11a2 2 0 002 2h11a2 2 0 002-2v-5m-1.414-9.414a2 2 0 112.828 2.828L11.828 15H9v-2.828l8.586-8.586z"></path>
                </svg>
              <% end %>
              <%= button_to beverage_path(beverage), method: :delete, class: "text-red-600 hover:text-red-900 p-1", data: { turbo_confirm: "本当に削除しますか？" } do %>
                <svg class="w-5 h-5" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                  <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M19 7l-.867 12.142A2 2 0 0116.138 21H7.862a2 2 0 01-1.995-1.858L5 7m5 4v6m4-6v6m1-10V4a1 1 0 00-1-1h-4a1 1 0 00-1 1v3M4 7h16"></path>
                </svg>
              <% end %>
            </div>
          </div>
        </div>
      <% end %>
    </div>

    <!-- PC: テーブル形式 -->
    <div class="hidden md:block bg-white shadow-md rounded-lg overflow-hidden">
      <table class="min-w-full divide-y divide-gray-200">
        <thead class="bg-gray-50">
          <tr>
            <th class="px-6 py-3 text-left text-xs font-medium text-gray-500 uppercase tracking-wider">飲み物名</th>
            <th class="px-6 py-3 text-left text-xs font-medium text-gray-500 uppercase tracking-wider">カフェイン量</th>
            <th class="px-6 py-3 text-right text-xs font-medium text-gray-500 uppercase tracking-wider">操作</th>
          </tr>
        </thead>
        <tbody class="bg-white divide-y divide-gray-200">
          <% @beverages.each do |beverage| %>
            <tr class="hover:bg-gray-50">
              <td class="px-6 py-4 whitespace-nowrap text-sm font-medium text-gray-900">
                <%= beverage.name %>
              </td>
              <td class="px-6 py-4 whitespace-nowrap text-sm text-gray-600">
                <%= beverage.caffeine_mg %> mg
              </td>
              <td class="px-6 py-4 whitespace-nowrap text-right text-sm font-medium space-x-2">
                <%= link_to "編集", edit_beverage_path(beverage), class: "text-indigo-600 hover:text-indigo-900" %>
                <%= button_to "削除", beverage_path(beverage), method: :delete, class: "text-red-600 hover:text-red-900", data: { turbo_confirm: "本当に削除しますか？" } %>
              </td>
            </tr>
          <% end %>
        </tbody>
      </table>
    </div>
  <% end %>

  <div class="mt-6">
    <%= link_to "← ダッシュボードに戻る", root_path, class: "text-gray-600 hover:text-gray-900" %>
  </div>
</div>
