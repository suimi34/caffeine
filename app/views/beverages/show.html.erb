<div class="max-w-lg mx-auto px-4 py-8">
  <h1 class="text-2xl font-bold text-gray-900 mb-6"><%= @beverage.name %></h1>

  <div class="bg-white shadow-md rounded-lg p-6">
    <dl class="space-y-4">
      <div>
        <dt class="text-sm font-medium text-gray-500">飲み物名</dt>
        <dd class="mt-1 text-lg text-gray-900"><%= @beverage.name %></dd>
      </div>
      <div>
        <dt class="text-sm font-medium text-gray-500">カフェイン量</dt>
        <dd class="mt-1 text-lg text-gray-900"><%= @beverage.caffeine_mg %> mg</dd>
      </div>
    </dl>
  </div>

  <div class="mt-6 flex gap-4">
    <%= link_to "編集", edit_beverage_path(@beverage), class: "bg-indigo-600 hover:bg-indigo-700 text-white font-medium py-2 px-4 rounded-lg transition" %>
    <%= link_to "一覧に戻る", beverages_path, class: "text-gray-600 hover:text-gray-900" %>
  </div>
</div>
