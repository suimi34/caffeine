<%= form_with model: @beverage, class: "space-y-6" do |form| %>
  <% if @beverage.errors.any? %>
    <div class="bg-red-100 border border-red-400 text-red-700 px-4 py-3 rounded">
      <ul class="list-disc list-inside">
        <% @beverage.errors.full_messages.each do |message| %>
          <li><%= message %></li>
        <% end %>
      </ul>
    </div>
  <% end %>

  <div>
    <%= form.label :name, "飲み物名", class: "block text-sm font-medium text-gray-700 mb-1" %>
    <%= form.text_field :name, class: "w-full px-3 py-2 border border-gray-300 rounded-lg shadow-sm focus:outline-none focus:ring-2 focus:ring-emerald-500 focus:border-emerald-500", placeholder: "例: コーヒー" %>
  </div>

  <div>
    <%= form.label :caffeine_mg, "カフェイン量 (mg)", class: "block text-sm font-medium text-gray-700 mb-1" %>
    <%= form.number_field :caffeine_mg, class: "w-full px-3 py-2 border border-gray-300 rounded-lg shadow-sm focus:outline-none focus:ring-2 focus:ring-emerald-500 focus:border-emerald-500", min: 0, placeholder: "例: 95" %>
  </div>

  <div class="flex items-center gap-4">
    <%= form.submit class: "bg-emerald-600 hover:bg-emerald-700 text-white font-medium py-2 px-6 rounded-lg transition cursor-pointer" %>
    <%= link_to "キャンセル", beverages_path, class: "text-gray-600 hover:text-gray-900" %>
  </div>
<% end %>
